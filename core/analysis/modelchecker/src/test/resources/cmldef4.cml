channels
	a,
	b,
	fault,
	error,
	failure

process P =
begin
	actions
		NOMINAL_P = a -> ((b -> NOMINAL_P) [] FAULT_P)
		FAULT_P = fault -> ((b -> NOMINAL_P) [] (error -> Skip))
	@ NOMINAL_P
end

process Q = 
begin
	actions
		NOMINAL_Q = a -> ((b -> NOMINAL_Q) [] FAULT_Q)
		FAULT_Q = fault -> NOMINAL_Q
	@ NOMINAL_Q
end

-- The following definitions must be in a separate file
chansets
	F = {| fault |}
	E = {| fault, error, failure |}
	H = {| fault |}
	Alpha = {| fault, error, failure, a, b |}
	--H = dunion({ErrorDetectionChannels, 
	--            	RecoveryChannels, 
	--            	OperationChannels})

process RunE = 
begin	
	@ [] e: E @ e -> RunE
end

process ChaosE = 
begin
	@ Chaos [| E |] RunE
end

-- Processes related to P

process NoFaults_P = 
begin
	@ (P \\ H) [| E |] Stop 
end

process Lazy_P = 
begin
	@ ((P \\ H) [| E |] ChaosE) \\ E 
end

process Limit_P = 
begin
	@ [] e: F @ e -> Limit_P
end

process LazyLimit_P = 
begin
	@ (((P \\ H) [| E |] Limit_P) [| E |] ChaosE) \\ E 
end

-- Processes related to Q
process NoFaults_Q = 
begin
	@ (Q \\ H) [| E |] Stop 
end

process Lazy_Q = 
begin
	@ ((Q \\ H) [| E |] ChaosE) \\ E 
end

process Limit_Q = 
begin
	@ [] e: F @ e -> Limit_Q
end

process LazyLimit_Q = 
begin
	@ (((Q \\ H) [| E |] Limit_Q) [| E |] ChaosE) \\ E 
end

-- Verifications
process FT_P_H = P \\ H
process FT_P_E = P \\ E
process FT_Q_H = Q \\ H
process FT_Q_E = Q \\ E

process FT_P = NoFaults_P [| Alpha |] LazyLimit_P
process FT_Q = NoFaults_Q [| Alpha |] LazyLimit_Q
