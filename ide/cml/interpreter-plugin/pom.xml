<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>eu.compassresearch.ide</groupId>
    <artifactId>eu.compassresearch.ide.cml</artifactId>
    <version>0.0.1<!--Replaceable: Main Version--></version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <groupId>eu.compassresearch.ide.cml</groupId>
  <artifactId>eu.compassresearch.ide.cml.interpreter_plugin</artifactId>
  <name>COMPASS IDE Interpreter Plugin</name>

  <packaging>jar</packaging>

  <dependencies>
  	<dependency>
  		<groupId>eu.compassresearch.ide.cml</groupId>
  		<artifactId>eu.compassresearch.ide.cml.ui</artifactId>
  		<version>${project.version}</version>
  	</dependency>
    <dependency>
      <groupId>org.eclipse.ui</groupId>
      <artifactId>org.eclipse.ui.ide</artifactId>
      <version>3.7.0</version>
    </dependency>
        <dependency>
      <groupId>org.eclipse.core</groupId>
      <artifactId>org.eclipse.core.runtime</artifactId>
      <version>3.7.0</version>
    </dependency>
      <dependency>
      <groupId>org.eclipse.debug</groupId>
      <artifactId>org.eclipse.debug.core</artifactId>
      <version>3.7.1</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.debug</groupId>
      <artifactId>org.eclipse.debug.ui</artifactId>
      <version>3.7.102</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.jface</groupId>
      <artifactId>org.eclipse.jface</artifactId>
      <version>3.7.0</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.swt</groupId>
      <artifactId>org.eclipse.swt</artifactId>
      <version>3.7.2</version>
    </dependency>
  	<dependency>
      <groupId>org.eclipse.swt</groupId>
      <artifactId>org.eclipse.swt.cocoa.macosx.x86_64</artifactId>
      <version>3.7.2</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.ui</groupId>
      <artifactId>org.eclipse.ui.console</artifactId>
      <version>3.5.100</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.core</groupId>
      <artifactId>org.eclipse.core.resources</artifactId>
      <version>3.7.101</version>
    </dependency>
    <dependency>
    	<groupId>org.eclipse.jdt</groupId>
    	<artifactId>core</artifactId>
    	<version>3.3.0-v_771</version>
    </dependency>
<!--   	dependency for launching a JVM from within the code -->
  	<dependency>
  		<groupId>org.eclipse.jdt</groupId>
  		<artifactId>launching</artifactId>
  		<version>3.3.0-v20070510</version>
  	</dependency>
<!--   	The interpreter core -->
  	<dependency>
  		<groupId>eu.compassresearch.core</groupId>
  		<artifactId>interpreter</artifactId>
  		<version>${project.version}</version>
  	</dependency>
  	 <dependency>
      <groupId>com.googlecode.json-simple</groupId>
      <artifactId>json-simple</artifactId>
      <version>1.1</version>
    </dependency>
  </dependencies>

 <build>
    <plugins>
      <!-- Copy the interpreter jar into the lib folder -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy</id>
            <phase>package</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
      			<artifactItem>
                  <groupId>eu.compassresearch.core</groupId>
                  <artifactId>interpreter</artifactId>
                  <version>${project.version}</version>
                  <type>jar</type>
                  <overWrite>true</overWrite>
                </artifactItem>
                
                <artifactItem>
                  <groupId>com.googlecode.json-simple</groupId>
                  <artifactId>json-simple</artifactId>
                  <version>1.1</version>
                  <type>jar</type>
                  <overWrite>true</overWrite>
                </artifactItem>
              </artifactItems>
              <outputDirectory>lib</outputDirectory>
              <overWriteReleases>true</overWriteReleases>
              <overWriteSnapshots>true</overWriteSnapshots>
            </configuration>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>


</project>
