<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<groupId>eu.compassresearch.ide</groupId>
		<artifactId>eu.compassresearch.ide.cml</artifactId>
		<version>0.0.1<!--Replaceable: Main Version--></version>
		<relativePath>../pom.xml</relativePath>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<name>eu.compassresearch.ide.cml.build</name>
	<groupId>eu.compassresearch.ide.cml</groupId>
	<artifactId>eu.compassresearch.ide.cml.build</artifactId>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-deploy-plugin</artifactId>
				<version>2.7</version>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>

						<phase>install</phase>
						<configuration>
							<target>
							  
								<property name="base" value="${eclipse.installtion}" />
								<property name="equinoxLauncherPluginVersion"
									value="${equinox.version}" />
								<property name="pdeBuildPluginVersion"
									value="${pde.version}" />
								<property name="baseos" value="${baseos}" />
								<property name="basews" value="${basews}" />
								<property name="basearch" value="${basearch}" />

								<property name="eclipseLocation" value="${eclipse.installation}" />
								<property name="buildDirectory" value="${project.build.directory}/CompassIDE" />
								<property name="pluginPath" value="${pluginpath}" />

								<ant antfile="${eclipse.installation}/plugins/org.eclipse.pde.build_${pde.version}/scripts/productBuild/productBuild.xml" />
							</target>

						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>

				</executions>
				<!-- dependencies> <dependency> <groupId>ant-contrib</groupId> <artifactId>ant-contrib</artifactId> 
					<version>1.0b3</version> <exclusions> <exclusion> <groupId>ant</groupId> 
					<artifactId>ant</artifactId> </exclusion> </exclusions> </dependency> <dependency> 
					<groupId>ant</groupId> <artifactId>ant-nodeps</artifactId> <version>1.6.5</version> 
					</dependency> </dependencies -->
			</plugin>
		</plugins>
	</build>

</project>
