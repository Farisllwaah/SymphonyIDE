<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>

<plugin>
  <!-- For possible extension points see
 
  http://help.eclipse.org/indigo/index.jsp?
  topic=%2Forg.eclipse.platform.doc.isv%2Freference%2Fextension-points%2Findex.html

  -->
  
  <extension
        point="org.eclipse.ui.startup">
     <startup class="eu.compassresearch.ide.faulttolerance.Activator"> </startup>
  </extension>
  <extension
        point="org.eclipse.ui.views"> 
      
        <view id="eu.compassresearch.ide.faulttolerance.view.VerificationResultsView"
                name="FT verification results view"
                icon="icons/resultsView.png"
             category="eu.compassresearch.ide.ui.category"
                class="eu.compassresearch.ide.faulttolerance.view.VerificationResultsView"/>
  </extension>
    
  <extension
        point="org.eclipse.ui.menus">
        <menuContribution locationURI="popup:eu.compassresearch.ide.ui.CmlNavigator">
            <command
                  commandId="eu.compassresearch.ide.faulttolerance.verification.Verify"
                  id="eu.compassresearch.ide.faulttolerance.verification.Verify"
                  mnemonic="F">
                  <!--
                    <visibleWhen>
                   <with variable="activeMenuSelection">
                    <iterate
                         ifEmpty="false">
                     <adapt type="org.eclipse.core.resources.IResource">
                       <test property="org.eclipse.core.resources.name" value="*.java" />
                     </adapt>
                    </iterate>
                   </with>
              </visibleWhen>
              -->
            </command>
        </menuContribution>
  </extension>
  
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="eu.compassresearch.ide.faulttolerance.verification.Verify"
            name="%VERIFY_FAULT_TOLERANCE">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="eu.compassresearch.ide.faulttolerance.FaultToleranceVerificationHandler"
            commandId="eu.compassresearch.ide.faulttolerance.verification.Verify">
      </handler>
   </extension>
   
  <extension id="eu.compassresearch.ide.faulttolerance.verification.problem" point="org.eclipse.core.resources.markers">
     <super type="org.eclipse.core.resources.problemmarker"/>
     <attribute name="processName"/>
     <attribute name="limitProcess"/>
     <persistent value="true"/>
  </extension>
</plugin>
