<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>

<plugin>



   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="eu.compassresearch.ide.cml.ui.editor.core.CmlEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            default="true"
            icon="icons/cview16/cml_file_tsk.png"
            id="eu.compassresearch.ide.cml.ui.editor"
            name="CML Editor">
         <contentTypeBinding
               contentTypeId="eu.compassresearch.ide.cml.core.content-type1">
         </contentTypeBinding>
      </editor>
   </extension>
   
   <extension
         point="org.eclipse.ui.newWizards">
      
      <wizard
            category="compass_eu.compassresearch.ide.cml.ui.category"
            class="eu.compassresearch.ide.cml.ui.wizard.NewCmlFileWizard"
            icon="icons/cview16/cml_file_tsk.png"
            id="eu.compassresearch.ide.cml.ui.newcmlfilewizard"
            name="CML File">
      </wizard>
       <primaryWizard id="eu.compassresearch.ide.cml.ui.newcmlfilewizard" />
      
      <wizard
            category="compass_eu.compassresearch.ide.cml.ui.category"
            class="eu.compassresearch.ide.cml.ui.wizard.NewCmlProjectWizard"
            finalPerspective="eu.compassresearch.ide.ui.perspective"
            icon="icons/cview16/cml_file_tsk.png"
            id="eu.compassresearch.ide.CmlProjectWizard"
            name="%newProjectWizardName"
            preferredPerspectives="eu.compassresearch.ide.ui.perspective"
            project="true">

      </wizard>
        <primaryWizard id="eu.compassresearch.ide.CmlProjectWizard" />
      
       <wizard
            category="compass_eu.compassresearch.ide.cml.ui.category"
            class="eu.compassresearch.ide.cml.ui.wizard.NewCmlClassWizard"
            icon="icons/cview16/cml_file_tsk.png"
            id="eu.compassresearch.ide.cml.ui.newcmlclasswizard"
            
            name="CML Class">
      </wizard>
      
      
       <wizard
            category="compass_eu.compassresearch.ide.cml.ui.category"
            class="eu.compassresearch.ide.cml.ui.wizard.NewCmlProcessWizard"
            icon="icons/cview16/cml_file_tsk.png"
            id="eu.compassresearch.ide.cml.ui.newcmlprocesswizard"
            name="CML Process">
      </wizard>
      
      
      <category
            id="compass_eu.compassresearch.ide.cml.ui.category"
            name="COMPASS">
      </category>

   </extension>


<!-- Defining the CML Project Explorer -->
	<extension
			point="org.eclipse.ui.views">
		<category
			id="eu.compassresearch.ide.ui.category"
			name="COMPASS"/>
		<view
			category="eu.compassresearch.ide.ui.category"
			allowMultiple="false"
			class="org.eclipse.ui.navigator.CommonNavigator"
			icon="icons/cview16/compass_nav.png"
			id="eu.compassresearch.ide.ui.CmlNavigator"
			name="%CmlExplorerName"/>
	</extension>






   <extension
         point="org.eclipse.ui.ide.projectNatureImages">
      <image
            icon="icons/ovr16/cml_ovr.gif"
            id="eu.compassresearch.ide.cml.cml-ui.cmlnature.image"
            natureId="eu.compassresearch.ide.cml.ui.cmlnature">
      </image>
   </extension>
   
   
    <extension point="org.eclipse.ui.views">
    <view 
        id="eu.compassresearch.ide.cml.ui.Sanitizer"
        name="COMPASS UI Debug Sanitizer"
        category="compass_eu.compassresearch.ide.cml.ui.category"
        icon="icons/cview16/cml_file_tsk.png"
        class="eu.compassresearch.ide.cml.ui.Sanitizer" />
  </extension>
   
      <extension
         id="cmlnature"
         name="CML Project Nature"
         point="org.eclipse.core.resources.natures">
         <runtime>
            <run class ="eu.compassresearch.ide.cml.ui.builder.CmlProjectNature" />
         </runtime>
     </extension>
   

   <extension
         point="org.overture.ide.core.parsePaticipant">
      <parser
            class="eu.compassresearch.ide.cml.ui.editor.core.SourceParserCml"
            nature="eu.compassresearch.ide.cml.ui.cmlnature">
      </parser>
   </extension>
   <extension
         point="org.overture.ide.core.buildParticipant">
      <builder
            class="eu.compassresearch.ide.cml.ui.builder.BuilderCml"
            nature="eu.compassresearch.ide.cml.ui.cmlnature">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerActionBinding
            viewerId="com.example.test">
         <includes>
            <actionExtension
                  pattern="org.eclipse.ui.navigator.resources.*">
            </actionExtension>
         </includes>
      </viewerActionBinding>
      <viewerContentBinding
            viewerId="com.example.test">
         <includes>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resourceContent">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.filters.*">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.linkHelper">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.workingSets">
            </contentExtension>
         </includes>
      </viewerContentBinding>
      <viewerActionBinding
            viewerId="com.example.test">
         <includes>
            <actionExtension
                  pattern="org.eclipse.ui.navigator.resources.*">
            </actionExtension>
         </includes>
      </viewerActionBinding>
      <viewerContentBinding
            viewerId="com.example.test">
         <includes>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resourceContent">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.filters.*">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.linkHelper">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.workingSets">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>



   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewer
            viewerId="eu.compassresearch.ide.ui.CmlNavigator">
      </viewer>
      <viewerContentBinding
            viewerId="eu.compassresearch.ide.ui.CmlNavigator">
         <includes>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.filters.*">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.linkHelper">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.workingSets">
            </contentExtension>
            <contentExtension
                  pattern="eu.compassresearch.resources.filters.*">
            </contentExtension>
            <contentExtension
                  pattern="eu.compassresearch.ide.ui.navigator.resources.filters.*">
            </contentExtension>
            <contentExtension
                  pattern="eu.compassresearch.ide.ui.cmlNavigatorContent">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="org.eclipse.ui.model.WorkbenchContentProvider"
            icon="icons/cview16/compass_nav.png"
            id="eu.compassresearch.ide.ui.cmlNavigatorContent"
            labelProvider="org.eclipse.ui.model.WorkbenchLabelProvider"
            name="CML Navigator Content"
            priority="highest">
         <triggerPoints>
            <or>
               <instanceof
                     value="org.eclipse.core.resources.IProject">
               </instanceof>
               <instanceof
                     value="org.eclipse.core.resources.IResource">
               </instanceof>
            </or>
         </triggerPoints>
         <possibleChildren>
            <or>
               <instanceof
                     value="org.eclipse.core.resources.IResource">
               </instanceof>
            </or>
         </possibleChildren>
         <override
               policy="InvokeAlwaysRegardlessOfSuppressedExt"
               suppressedExtensionId="org.eclipse.team.ui.resourceContent">
         </override>
         <enablement>
            <or>
               <adapt
                     type="org.eclipse.core.resources.IProject">
               </adapt>
               <instanceof
                     value="org.eclipse.core.resources.IResource">
               </instanceof>
            </or>
         </enablement>
         <commonSorter
               class="org.eclipse.ui.internal.navigator.resources.workbench.ResourceExtensionSorter"
               id="org.eclipse.ui.navigator.resources.sorters.defaultSorter">
            <parentExpression>
               <or>
                  <instanceof
                        value="org.eclipse.core.resources.IResource">
                  </instanceof>
               </or>
            </parentExpression>
         </commonSorter>
         <dropAssistant
               class="org.overture.ide.ui.navigator.VdmDropAdapterAssistent"
               id="org.eclipse.ui.navigator.resources.resourceDropAdapter">
            <possibleDropTargets>
               <or>
                  <adapt
                        type="org.eclipse.core.resources.IProject">
                  </adapt>
                  <adapt
                        type="org.eclipse.core.resources.IFolder">
                  </adapt>
                  <adapt
                        type="org.eclipse.core.resources.IFile">
                  </adapt>
               </or>
            </possibleDropTargets>
         </dropAssistant>
         <actionProvider
               class="org.eclipse.ui.internal.navigator.resources.actions.EditActionProvider"
               id="org.eclipse.ui.navigator.resources.actions.EditActions">
         </actionProvider>
         <actionProvider
               class="org.eclipse.ui.internal.navigator.resources.actions.RefactorActionProvider"
               id="org.eclipse.ui.navigator.resources.actions.RefactorActions">
         </actionProvider>
         <actionProvider
               class="org.eclipse.ui.internal.navigator.resources.actions.WorkManagementActionProvider"
               id="org.eclipse.ui.navigator.resources.WorkManagementActionProvider">
            <enablement>
               <adapt
                     type="org.eclipse.core.resources.IResource">
               </adapt>
            </enablement>
         </actionProvider>
         <actionProvider
               class="org.eclipse.ui.internal.navigator.resources.actions.ResourceMgmtActionProvider"
               id="org.eclipse.ui.navigator.resources.ResourceMgmtActions">
            <enablement>
               <or>
                  <adapt
                        type="org.eclipse.core.resources.IResource">
                  </adapt>
                  <adapt
                        type="java.util.Collection">
                     <count
                           value="0">
                     </count>
                  </adapt>
               </or>
            </enablement>
         </actionProvider>
      </navigatorContent>
      <commonFilter
            activeByDefault="true"
            description="%Filters.startsWithDot.description"
            id="eu.compassresearch.ui.navigator.resources.filters.startsWithDot"
            name="%Filters.startsWithDot.name">
         <filterExpression>
            <and>
               <adapt
                     type="org.eclipse.core.resources.IResource">
                  <test
                        property="org.eclipse.core.resources.name"
                        value=".*">
                  </test>
               </adapt>
            </and>
         </filterExpression>
      </commonFilter>
      <commonFilter
            activeByDefault="false"
            description="%Filters.endsWithClass.description"
            id="eu.compassresearch.ui.navigator.resources.filters.endsWithClass"
            name="%Filters.endsWithClass.name">
         <filterExpression>
            <and>
               <instanceof
                     value="org.eclipse.core.resources.IFile">
               </instanceof>
               <test
                     property="org.eclipse.core.resources.name"
                     value="*.class">
               </test>
            </and>
         </filterExpression>
      </commonFilter>
      <commonFilter
            activeByDefault="true"
            description="%Filters.endsWithTilde.description"
            id="org.eclipse.ui.navigator.resources.filters.endsWithTilde"
            name="%Filters.endsWithTilde.name">
         <filterExpression>
            <and>
               <instanceof
                     value="org.eclipse.core.resources.IFile">
               </instanceof>
               <test
                     property="org.eclipse.core.resources.name"
                     value="*.*~">
               </test>
            </and>
         </filterExpression>
      </commonFilter>
      <commonFilter
            activeByDefault="true"
            description="%Filters.startsWithTildeDollar.description"
            id="eu.compassresearch.ui.navigator.resources.filters.startsWithTildeDollar"
            name="%Filters.startsWithTildeDollar.name">
         <filterExpression>
            <and>
               <instanceof
                     value="org.eclipse.core.resources.IFile">
               </instanceof>
               <test
                     property="org.eclipse.core.resources.name"
                     value="~$*">
               </test>
            </and>
         </filterExpression>
      </commonFilter>
      <commonFilter
            activeByDefault="true"
            description="%Filters.Only.COMPASSProjects.description"
            id="eu.compassresearch.ui.navigator.resources.filters.OvertureProjects"
            name="%Filters.Only.COMPASSProjects.name">
         <filterExpression>
            <and>
               <not>
                  <adapt
                        type="org.eclipse.core.resources.IProject">
                     <or>
                        <adapt
                              type="org.eclipse.core.resources.IProject">
                        </adapt>
                        <not>
                           <test
                                 property="org.eclipse.core.resources.open">
                           </test>
                        </not>
                     </or>
                  </adapt>
               </not>
               <instanceof
                     value="org.eclipse.core.resources.IProject">
               </instanceof>
            </and>
         </filterExpression>
      </commonFilter>
   </extension>
</plugin>
